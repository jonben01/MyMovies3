<VBox maxHeight="-Infinity" maxWidth="-Infinity" prefHeight="722.0" prefWidth="1059.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="dk.easv.mymovies3.GUI.Controllers.MainController">
   <children>
      <VBox prefHeight="83.0" prefWidth="600.0">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0" />
                  <TextField fx:id="txtSearch" alignment="TOP_CENTER" prefHeight="25.0" prefWidth="247.0" promptText="Search for a movie">
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin>
                  </TextField>
               </children>
            </HBox>
         </children>
      </VBox>
      <VBox prefHeight="200.0" prefWidth="547.0" VBox.vgrow="ALWAYS">
         <children>
            <HBox prefHeight="100.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
               <children>
                  <CheckTreeView fx:id="filterBox" minWidth="170.0" />
                  <TableView fx:id="tblMovies" maxHeight="900.0" maxWidth="1600.0" prefHeight="485.0" prefWidth="832.0" HBox.hgrow="SOMETIMES">
                    <columns>
                      <TableColumn fx:id="colTitle" prefWidth="165.0" text="Title" />
                      <TableColumn fx:id="colIMDB" minWidth="0.0" prefWidth="62.0" text="IMDB" />
                        <TableColumn fx:id="colPersonalRating" prefWidth="98.0" text="Personal Rating" />
                        <TableColumn fx:id="colYear" prefWidth="97.0" text="Year" />
                        <TableColumn fx:id="colCategory" prefWidth="169.0" text="Category" />
                    </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
                  <HBox prefHeight="486.0" prefWidth="203.0" />
               </children>
            </HBox>
            <VBox prefHeight="36.0" prefWidth="600.0">
               <children>
                  <HBox prefHeight="100.0" prefWidth="200.0">
                     <children>
                        <Button fx:id="btnAddMovie" mnemonicParsing="false" onAction="#handleAddMovie" text="Create a movie">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="btnEditMovie" mnemonicParsing="false" onAction="#handleEditMovie" text="Edit a movie">
                           <HBox.margin>
                              <Insets right="10.0" />
                           </HBox.margin>
                        </Button>
                        <Button fx:id="btnDeleteMovie" mnemonicParsing="false" onAction="#handleDeleteMovie" text="Remove a movie" />
                     </children>
                  </HBox>
               </children>
            </VBox>
         </children>
      </VBox>
      <VBox prefHeight="117.0" prefWidth="600.0">
         <children>
            <Button fx:id="btnPlayMovie" mnemonicParsing="false" onAction="#handlePlayMovie" text="play" />
         </children></VBox>
   </children>
</VBox>
