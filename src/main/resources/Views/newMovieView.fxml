      <Button fx:id="btnAddMovie" layoutX="49.0" layoutY="326.0" mnemonicParsing="false" onAction="#handleAddMovie" text="add" />
      <Button fx:id="btnCancelMovie" layoutX="473.0" layoutY="326.0" mnemonicParsing="false" onAction="#handleCancelMovie" text="cancel" />
