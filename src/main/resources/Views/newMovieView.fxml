   <children>
      <TextField fx:id="txtTitle" layoutX="47.0" layoutY="39.0" promptText="Title" />
      <TextField fx:id="txtIMDBRating" layoutX="48.0" layoutY="99.0" promptText="Imdb" />
      <TextField fx:id="txtPersonalRating" layoutX="49.0" layoutY="159.0" promptText="Personal" />
      <TextField fx:id="txtMovieYear" layoutX="48.0" layoutY="219.0" promptText="Year" />
