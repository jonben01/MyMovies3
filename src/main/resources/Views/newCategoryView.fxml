   <children>
      <ListView fx:id="listCategory" layoutX="14.0" layoutY="52.0" prefHeight="315.0" prefWidth="200.0" />
      <TextField layoutX="14.0" layoutY="14.0" promptText="search category" />
      <TextField fx:id="txtCategory" layoutX="225.0" layoutY="74.0" promptText="category to be added" />
      <Button fx:id="btnAddCategory" layoutX="225.0" layoutY="109.0" mnemonicParsing="false" onAction="#handleAddCategory" text="add category" />
      <Button fx:id="btnDeleteCategory" layoutX="225.0" layoutY="144.0" mnemonicParsing="false" onAction="#handleDeleteCategory" text="delete category" />
   </children>
</AnchorPane>
